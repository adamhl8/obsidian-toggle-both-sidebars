		"prepublishOnly": "bun bundle"
	},
	"devDependencies": {
		"@adamhl8/configs": "^0.15.19",
		"@arethetypeswrong/core": "^0.18.2",
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "^1.2.22",
		"@types/node": "^24.5.2",
		"knip": "^5.63.1",
		"markdown-toc": "^1.2.0",
		"obsidian": "^1.8.7",
		"publint": "^0.3.13",
		"tsdown": "^0.15.2",
		"typescript": "^5.9.2"
	}
}
