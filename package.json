{
  "name": "obsidian-sample-plugin",
  "version": "1.0.0",
  "type": "module",
  "description": "This Obsidian plugin adds a command to toggle both sidebars.",
  "author": "adamlh8",
  "license": "MIT",
  "scripts": {
    "bundle": "rm -rf ./dist && bun lint && bun bundle.ts",
    "lint": "tsc --noEmit && biome check --write",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "prepublishOnly": "bun bundle"
  },
  "devDependencies": {
    "@adamhl8/configs": "^0.9.0",
    "@biomejs/biome": "^2.0.6",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.10",
    "obsidian": "^1.8.7",
    "typescript": "^5.8.3"
  }
}
